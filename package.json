{
  "name": "expense-mgmt",
  "version": "1.0.0",
  "private": true,
  "description": "Expense Management System - Next.js Full-Stack App",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@expense-mgmt/web",
    "build": "npm run build --workspace=@expense-mgmt/shared && npm run build --workspace=@expense-mgmt/web",
    "start": "npm run start --workspace=@expense-mgmt/web",
    "lint": "npm run lint --workspace=@expense-mgmt/web",
    "type-check": "npm run type-check --workspace=@expense-mgmt/shared && npm run type-check --workspace=@expense-mgmt/web",
    "db:generate": "cd apps/web && npm run db:generate",
    "db:push": "cd apps/web && npm run db:push",
    "db:migrate": "cd apps/web && npm run db:migrate",
    "db:seed": "cd apps/web && npm run db:seed",
    "db:studio": "prisma studio --schema=./infra/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "prisma": "^5.6.0"
  }
}